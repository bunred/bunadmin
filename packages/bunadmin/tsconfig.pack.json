{
  "extends": "./tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noEmit": false,
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "exclude": [
    "index.ts",
    "node_modules",
    "lib",
    "pages",
    "src/private",
    "src/App.tsx",
    "src/index.tsx",
    "src/serviceWorker.ts",
    "src/pages",
    "src/private"
  ]
}
